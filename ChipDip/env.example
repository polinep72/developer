# Пример файла конфигурации .env
# Скопируйте этот файл в .env и заполните реальными значениями

# --- PostgreSQL ---
DB_NAME=chipdip_db
DB_USER=chipdip_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# --- Selenium / Firefox ---
GECKODRIVER_PATH=geckodriver
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64; rv:100.0) Gecko/20100101 Firefox/100.0
HEADLESS=1
SELENIUM_WAIT_TIMEOUT=25
SELENIUM_PAGE_LOAD_TIMEOUT_SEC=60

# --- Логирование ---
LOG_LEVEL_CONSOLE=INFO
LOG_LEVEL_FILE=DEBUG
LOG_FILE_PATH=parser_app.log

# --- Логика парсера ---
MAX_REQUESTS_PER_HOUR=25
MIN_REQUEST_DELAY_SEC=70
MAX_REQUEST_DELAY_SEC=200
SLEEP_NON_WORK_TIME_MIN=30
SLEEP_NO_PRODUCTS_MIN=15
WORK_START_HOUR=8
WORK_END_HOUR=17
HOLIDAYS_COUNTRY_CODE=RU
TIMEZONE=Europe/Moscow

# --- Статусы парсера ---
STATUS_PRODUCT_NOT_FOUND=product_not_found_on_site

# --- XPath селекторы для ChipDip ---
# Остатки: <span class="item__avail item__avail_available item__avail_float"><b>3022 шт.</b> со склада г.Москва</span>
XPATH_STOCK=//span[contains(@class, 'item__avail')]//b

# Цена: <span class="ordering__value" id="price_9000484616">130</span>
XPATH_PRICE=//span[@class='ordering__value']

# Название товара (пример)
XPATH_PRODUCT_NAME=//h1[@class='product-title']

# Описание товара (опционально)
XPATH_PRODUCT_DESCRIPTION=//div[@class='product-description']

# --- Flask ---
FLASK_SECRET_KEY=your_secret_key_change_me_in_production
FLASK_DEBUG=False
